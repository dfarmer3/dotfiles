#!/bin/sh

export XDG_CONFIG_HOME="$HOME/.config"

# Coursework
export MTH192="/run/media/dennisfarmer/Samsung-USB/coursework/calculus"
export MTH197="/run/media/dennisfarmer/Samsung-USB/coursework/linear_algebra"
export CHN111="/run/media/dennisfarmer/Samsung-USB/coursework/chinese"
export MUS140="/run/media/dennisfarmer/Samsung-USB/coursework/music_theory"
export CPS271="/run/media/dennisfarmer/Samsung-USB/coursework/c++"


# Programs
export EDITOR="gvim -v"
export VISUAL="gvim -v"
export PDFVIEWER="okular"

# Directories
export SCRIPTS="$HOME/github/scripts"

# Config Redirection
